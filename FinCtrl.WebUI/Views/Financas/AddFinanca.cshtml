@model FinCtrl.WebUI.ViewModels.FinancaViewModel

@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-center">Nova Despesa/Rendimento</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Tipo.Nome)                    
                    @Html.DropDownListFor(model => model.TipoId, (SelectList)ViewBag.tipos, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Nome)
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.DataEntrada)
                    @Html.TextBoxFor(model => model.DataEntrada, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Valor)
                    <div class="input-group-prepend">
                        <div class="input-group-text">R$</div>
                    </div>
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4 offset-4">
                    @Html.LabelFor(model => model.Observacao)
                    @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control" })
                </div>
                <div class="col-md-4 offset-4">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        }
        @Html.ActionLink("Voltar", "Index", "Financas", null, new { @class = "btn btn-primary"})
    </div>
</div>